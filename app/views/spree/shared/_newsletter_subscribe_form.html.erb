<div id="mailchimp_subscribe_wrap">
  <%= form_for :user, :url => subscriptions_path(format: :js), :remote => true do |f| %>
    <table>
      <tr>
        <td>
          <%= text_field_tag :email, nil, :placeholder => t('enter_your_email'), :class => 'email', :id => 'subscribe_email' %>
        </td>
        <td>
          <%= submit_tag t('subscribe') %>
        </td>
      </tr>
    </table>
  <% end -%>
</div>