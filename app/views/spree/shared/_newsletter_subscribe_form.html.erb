<div id="mailchimp_subscribe_wrap">
  <%= form_for :user, :url => subscriptions_path, :method => :post, :remote => true, :html =>{:id => "subscribe-form"} do |f| %>
    <table>
      <tr>
        <td>
          <%= email_field_tag :email, nil, :placeholder => t('enter_your_email'), :class => 'email', :id => 'subscribe_email' %>
        </td>
        <td>
          <%= submit_tag t('subscribe') %>
        </td>
      </tr>
    </table>
  <% end -%>
</div>
<div id="subscribe-modal" style="display: none"></div>
